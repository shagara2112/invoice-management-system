# Supabase Environment Configuration
# Copy this file to .env.local and update with your Supabase project details

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project-ref.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.your-project-ref.supabase.co:5432/postgres"

# Authentication Configuration
JWT_SECRET="your_jwt_secret_key_here_make_it_long_and_random_minimum_32_characters"
NEXTAUTH_SECRET="your_nextauth_secret_key_here_make_it_long_and_random_minimum_32_characters"
NEXTAUTH_URL="http://localhost:3000" # Change to your Vercel URL after deployment

# Application Configuration
NODE_ENV="development"
PORT=3000

# CORS Configuration
CORS_ORIGIN="http://localhost:3000" # Change to your Vercel URL after deployment

# File Upload Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="5MB"

# Feature Flags
ENABLE_ANALYTICS="true"
ENABLE_EXPORT="true"
ENABLE_BACKUP="true"
ENABLE_REAL_TIME="true"

# Development/Debug (Set to false in production)
DEBUG_MODE="true"
ENABLE_PRISMA_STUDIO="true"